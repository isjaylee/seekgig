<div class="body-content clearfix">
  <div class="block-section bg-color4">
    <div class="container">
      <div class="panel panel-md">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              <h1 class="text-center">Forgot your password?</h1>
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <div class="form-group">
                  <%= f.label :email, "Email" %>
                  <%= f.email_field :email, autofocus: true, class: "form-control", id: "username" %>
                </div>
                <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
              <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>

      <div class="white-space-20"></div>
      <div class="text-center color-white">Don't have an account? &nbsp; <%= link_to "Create one for free", new_user_registration_path, class: "link-white" %></div>
    </div>
  </div>

</div>

