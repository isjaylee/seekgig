<div class="body-content clearfix">
  <div class="block-section bg-color4">
    <div class="container">
      <div class="panel panel-md">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              <h1 class="text-center">Create an Account</h1>

              <!-- form login -->
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <div class="form-group">
                  <label>Username</label>
                  <%= f.text_field :username, autofocus: true, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label>Email</label>
                  <%= f.email_field:email, class: "form-control" %>
                </div>
                <div class="form-group">
                  <div class="row clearfix">
                  <div class="col-lg-6">
                    <%= f.label :firstname %>
                    <%= f.text_field :firstname, class: "form-control" %>
                  </div>
                  <div class="col-lg-6">
                    <%= f.label :lastname %>
                    <%= f.text_field :lastname, class: "form-control" %>
                  </div>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label :location %>
                  <%= f.text_field :location, placeholder: "Where are you located? (ex: city or zipcode or address...or all of it!)", class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= f.label :description %>
                  <%= f.text_area :description, placeholder: "Go into details about your skills and knowledge. Work experience? Education? Years on the job?", rows: 10, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= f.label :password, "Password (#{@minimum_password_length} characters minimum)" %>
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "password" %>
                </div>
                <div class="form-group">
                  <%= f.label :password_confirmation %>
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", id: "password-confirmation" %>
                </div>
                <div class="form-group no-margin">
                  <button class="btn btn-theme btn-lg btn-t-primary btn-block">Create Account</button>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="white-space-20"></div>
      <div class="text-center color-white">Have an account? &nbsp; <%= link_to "Login here", new_user_session_path, class: "link-white" %></div>
    </div>
  </div>
</div>
