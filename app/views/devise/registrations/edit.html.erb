<div class="body-content clearfix">
  <div class="block-section bg-color4">
    <div class="container">
      <div class="panel panel-md">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              <h1 class="text-center">Edit Your Account</h1>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div class="notification notice closeable margin-bottom-40">
                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                  </div>
                <% end %>
                <div class="form-group">
                  <%= f.label :username %>
                  <br>
                  <%= current_user.username %>
                </div>
                <div class="form-group">
                  <%= f.label :email %>
                  <%= f.text_field :email, autofocus: true, class: "form-control" %>
                </div>
                <div class="form-group">
                  <div class="row clearfix">
                  <div class="col-lg-6">
                    <%= f.label :firstname %>
                    <%= f.text_field :firstname, class: "form-control" %>
                  </div>
                  <div class="col-lg-6">
                    <%= f.label :lastname %>
                    <%= f.text_field :lastname, class: "form-control" %>
                  </div>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label :location %>
                  <%= f.text_field :location, placeholder: "Where are you located? (ex: city or zipcode or address...or all of it!)", class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= f.label :description %>
                  <%= f.text_area :description, placeholder: "Go into details about your skills and knowledge. Work experience? Education? Years on the job?", rows: 10, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= f.label :password, "New Password (leave blank if you don't want to change it)" %>
                  <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= f.label :password_confirmation, "New Password Confirmation" %>
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= f.label :current_password, "Current Password (we need your current password to confirm your changes)" %>
                  <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
                </div>
                <div class="form-group no-margin">
                  <%= f.submit "Update Profile", class: "btn btn-theme btn-lg btn-t-primary btn-block" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>